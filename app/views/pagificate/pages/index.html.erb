<h1>Pages</h1>

<h2>Published</h2>

<table border="0" cellspacing="5" cellpadding="5">
  
  <thead>
    <tr>
      <th>Title</th>
      <th colspan='2'>&nbsp;</th>
    </tr>
  </thead>
  
  <tbody>
    <% @published_pages.each do |page| %>
      <tr>
        <td><%= link_to page.title, page_path(page) %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>

<h2>Draft</h2>

<table border="0" cellspacing="5" cellpadding="5">
  
  <thead>
    <tr>
      <th>Title</th>
      <th colspan='2'>&nbsp;</th>
    </tr>
  </thead>
  
  <tbody>
    <% @unpublished_pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>
